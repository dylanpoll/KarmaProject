<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7E21"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ReaderActivity">
    <View
        android:id="@+id/divider"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3.5dp"
        android:background="@android:color/black" />
    <TextView
        android:id="@+id/banner"
        android:gravity="center"
        android:layout_width="324dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#A11414"
        android:text="@string/meeting_sign_in"
        android:textColor="#F1EFEF"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"
        app:fontFamily="@font/adamina" />
    <View
        android:id="@+id/backsplash"
        android:layout_width="183dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79.3dp"
        android:background="@android:color/black" />
    <TextView
        android:id="@+id/urlinfo"
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#C11313"
        android:text="@string/sign_in_portal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F3AA80"
        android:textSize="18sp"
        app:drawableTint="#FFFFFF"
        app:fontFamily="@font/adamina" />

    <EditText
        android:id="@+id/port"
        android:layout_width="180dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="#D3C3C3"
        android:ems="10"
        android:hint="@string/url_for_signin_use"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="@string/scan_in_members"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

</RelativeLayout>
